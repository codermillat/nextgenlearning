{
  "name": "google-search-console",
  "displayName": "Google Search Console",
  "version": "1.0.0",
  "description": "Monitor and optimize search performance",
  "author": "Canifi",
  "repository": "https://github.com/canifi/life-os-skills",
  "category": "analytics-seo",
  "keywords": ["seo", "google", "search", "indexing", "performance"],
  "capabilities": [
    "performance_analysis",
    "index_coverage",
    "url_inspection",
    "sitemap_management",
    "mobile_usability"
  ],
  "authentication": {
    "type": "oauth2",
    "provider": "google",
    "scopes": ["https://www.googleapis.com/auth/webmasters.readonly"],
    "authUrl": "https://accounts.google.com/o/oauth2/v2/auth",
    "tokenUrl": "https://oauth2.googleapis.com/token"
  },
  "endpoints": {
    "baseUrl": "https://searchconsole.googleapis.com/v1",
    "searchAnalytics": "/sites/{siteUrl}/searchAnalytics/query",
    "sitemaps": "/sites/{siteUrl}/sitemaps",
    "urlInspection": "/urlInspection/index:inspect"
  },
  "rateLimit": {
    "requests": 1200,
    "period": "minute"
  },
  "environmentVariables": [
    {
      "name": "GOOGLE_CLIENT_ID",
      "description": "Google OAuth client ID",
      "required": true
    },
    {
      "name": "GOOGLE_CLIENT_SECRET",
      "description": "Google OAuth client secret",
      "required": true
    },
    {
      "name": "GOOGLE_REFRESH_TOKEN",
      "description": "Google OAuth refresh token",
      "required": true
    },
    {
      "name": "GSC_SITE_URL",
      "description": "Verified site URL in Search Console",
      "required": true
    }
  ],
  "dependencies": [],
  "platforms": ["web"],
  "documentationUrl": "https://developers.google.com/webmaster-tools/v1"
}
